let
    Source = Testing_QA_Resources_list,
    Shifted = Table.AddColumn(Source, "Shifted", each
        let
            Level3 = [Manager_Name_L3],
            Level2 = [Manager_Name_L2],
            Level1 = [Manager_Name_L1],
            Employee = [Employee_Name],
            NewLevel3 = if Level3 <> null then Level3 else if Level2 <> null then Level2 else if Level1 <> null then Level1 else Employee,
            NewLevel2 = if Level3 <> null then Level2 else if Level2 <> null then Level1 else Employee,
            NewLevel1 = if Level3 <> null then Level1 else Employee
        in
            [Manager_Level_1 = NewLevel1, Manager_Level_2 = NewLevel2, Manager_Level_3 = NewLevel3]
    ),
    Expanded = Table.ExpandRecordColumn(Shifted, "Shifted", {"Manager_Level_1", "Manager_Level_2", "Manager_Level_3"}),
    
    // Create Management Path
    AddPathColumn = Table.AddColumn(Expanded, "Management_Path", each
        Text.Combine(
            List.RemoveNulls({
                [Employee_Name],
                [Manager_Level_1],
                [Manager_Level_2],
                [Manager_Level_3]
            }), 
            " â†’ "
        )
    ),

    // Create Hierarchy Level
    AddHierarchyLevel = Table.AddColumn(AddPathColumn, "Hierarchy_Level", each
        List.Count(
            List.RemoveNulls({
                [Manager_Level_1],
                [Manager_Level_2],
                [Manager_Level_3]
            })
        )
    )
in
    AddHierarchyLevel