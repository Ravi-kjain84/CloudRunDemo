import win32com.client

def resolve(identifier):
    outlook = win32com.client.Dispatch("Outlook.Application")
    namespace = outlook.GetNamespace("MAPI")
    
    recipient = namespace.CreateRecipient(identifier)
    recipient.Resolve()
    if not recipient.Resolved:
        print(f"Could not resolve: {identifier}")
        return
    
    entry = recipient.AddressEntry
    user = entry.GetExchangeUser()
    if not user:
        print(f"No Exchange user found for: {identifier}")
        return
    
    print("Name:             ", user.Name)
    print("Email:            ", user.PrimarySmtpAddress)
    print("Job Title:        ", user.JobTitle)
    print("Employee ID (Alias):", user.Alias)

if __name__ == "__main__":
    ident = input("Enter an Employee ID or Name: ").strip()
    resolve(ident)