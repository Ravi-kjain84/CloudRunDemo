import os
import pandas as pd

def main_jira_csv_writer_py():
    # Sample data
    df = pd.DataFrame({"ID": [1, 2], "Status": ["Open", "Closed"]})

    # Step 1: Get path to parent (Governance/)
    current_dir = os.path.dirname(__file__)  # RKJ_main_simplified/
    parent_dir = os.path.abspath(os.path.join(current_dir, os.pardir))  # Governance/

    # Step 2: Define full output path in parent
    output_path = os.path.join(parent_dir, "JIRA_output.csv")

    # Step 3: Write the file
    df.to_csv(output_path, index=False)
    print(f"Output written to: {output_path}")