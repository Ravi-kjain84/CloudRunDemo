from jira import JIRA
import pandas as pd

# Configuration
jira_url = "https://your-domain.atlassian.net"
jira_email = "your_email@example.com"
jira_token = "your_jira_token"

# Connect using basic authentication with email and API token
jira = JIRA(server=jira_url, basic_auth=(jira_email, jira_token))

# Get all available fields
fields = jira.fields()

# Convert to DataFrame
field_list = [{"Field Name": f["name"], "Field ID": f["id"]} for f in fields]
df = pd.DataFrame(field_list)

# Save to Excel
df.to_excel("jira_fields.xlsx", index=False)

print("Saved field list to jira_fields.xlsx")