from jira import JIRA

jira = JIRA(server='https://your-jira-instance.atlassian.net', basic_auth=('your_email', 'your_api_token'))

issue = jira.issue('PROJECT-123')  # Use any valid issue key
assignee = issue.fields.assignee

print("Display Name:", assignee.displayName)
print("Account ID:", assignee.accountId)
print("Email Address (if available):", getattr(assignee, 'emailAddress', 'Not Accessible'))