    # … after you’ve loaded created_ts …
    first_status_ts = g['Timestamp'].min()

    # strip tzinfo from both
    if isinstance(created_ts, pd.Timestamp):
        created_ts = created_ts.tz_localize(None)
    if isinstance(first_status_ts, pd.Timestamp):
        first_status_ts = first_status_ts.tz_localize(None)

    if pd.notna(created_ts) and pd.notna(first_status_ts):
        delta_first = (first_status_ts - created_ts).total_seconds() / 86400
        row['Time to First Update (days)'] = round(delta_first, 2)
    else:
        row['Time to First Update (days)'] = None