Sub Refresh_Selected_PowerQueries()
    Dim con As WorkbookConnection
    Dim allowedConnections As Variant
    Dim connectionName As Variant
    
    ' List of connections you want to refresh
    allowedConnections = Array("RequirementIntake", "GeneratedTestCases") ' Modify as needed

    Application.ScreenUpdating = False
    Application.DisplayAlerts = False
    Application.EnableEvents = False

    ' Refresh only selected queries
    For Each con In ThisWorkbook.Connections
        For Each connectionName In allowedConnections
            If con.Name = connectionName Then
                con.Refresh
                Exit For ' No need to check other names once matched
            End If
        Next connectionName
    Next con

    Application.ScreenUpdating = True
    Application.DisplayAlerts = True
    Application.EnableEvents = True

    MsgBox "Selected Power Queries Refreshed Successfully!", vbInformation
End Sub